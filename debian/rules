#!/usr/bin/make -f
# See debhelper(7) (uncomment to enable)
# output every command that modifies files on the build system.
#export DH_VERBOSE = 1


# see FEATURE AREAS in dpkg-buildflags(1)
#export DEB_BUILD_MAINT_OPTIONS = hardening=+all

export DH_VIRTUALENV_INSTALL_ROOT=/opt
export DH_VIRTUALENV_ARGUMENTS
export DH_VERBOSE=1
export PYBUILD_NAME=unipi-one-modbus
#export PYBUILD_INSTALL_ARGS=--install-lib=/usr/share/packagename/

# see ENVIRONMENT in dpkg-buildflags(1)
# package maintainers to append CFLAGS
#export DEB_CFLAGS_MAINT_APPEND  = -Wall -pedantic
# package maintainers to append LDFLAGS
#export DEB_LDFLAGS_MAINT_APPEND = -Wl,--as-needed

%:
	dh $@ --with python-virtualenv

## use this override to suppress parameter -a
##   which is invoked using dpkg-buildpackage --build=any
override_dh_virtualenv:
	dh_virtualenv
	sed 's#/opt/unipi-one-modbus/bin/python#debian/unipi-one-modbus/opt/unipi-one-modbus/bin/python#' -i debian/unipi-one-modbus/opt/unipi-one-modbus/bin/pip3
	debian/unipi-one-modbus/opt/unipi-one-modbus/bin/pip3 uninstall -y setuptools wheel pip

#	dh_virtualenv --break-system-packages

#override_dh_installinit:
#	dh_installinit --no-start

#override_dh_installsystemd:
#	dh_installsystemd --no-start

